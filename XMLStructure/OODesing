classes
	Attribute
	Element
	XMLStructure

relations
	Element has-a Attribute
	XMLStructure has-a Attribute
	XMLStructure has-a Element

state
	Attribute
		string name
		string value
	Element
		string id
		string key
		string text
		vector<Attribute> attributes
		vector<Element> childElements
